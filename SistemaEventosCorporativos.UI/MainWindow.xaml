<Window x:Class="SistemaEventosCorporativos.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaEventosCorporativos.UI"
        mc:Ignorable="d"
        Title="Sistema de Eventos" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#121212">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="240"/>
        </Grid.ColumnDefinitions>

        <!-- Área de conteúdo à esquerda -->
        <Border Grid.Column="0" Margin="15" CornerRadius="15" Background="#F5F5F5" Padding="15" SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="3" Opacity="0.2"/>
            </Border.Effect>
            <Border Background="White" CornerRadius="10" Padding="10">
                <ContentControl x:Name="ContentArea"/>
            </Border>
        </Border>

        <!-- Menu lateral à direita -->
        <Border Grid.Column="1" CornerRadius="15,0,0,15" Background="#1E1E1E" SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
            </Border.Effect>

            <StackPanel Margin="20">
                <!-- Estilo base para botões -->
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="#2A2A2A"/>
                        <Setter Property="BorderBrush" Value="#444"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="Margin" Value="0,8,0,0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3B3B3B"/>
                                            <Setter Property="BorderBrush" Value="#5C5C5C"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#292929"/>
                                            <Setter Property="BorderBrush" Value="#666"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>

                <TextBlock Text="📅 Sistema de Eventos"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,10,0,25"
                           TextAlignment="Center"/>

                <!-- Botões -->
                <Button Content="Cadastrar Evento" Click="BtnAbrirCadastroEvento_Click"/>
                <Button Content="Consultar Eventos" Click="BtnAbrirConsultaEventos_Click"/>
                <Button Content="Cadastrar Tipo de Evento" Click="BtnAbrirCadastroTipoEventos_Click"/>
                <Button Content="Cadastrar Fornecedor" Click="BtnAbrirCadastroFornecedor_Click"/>
                <Button Content="Cadastrar Participante" Click="BtnAbrirCadastroParticipante_Click"/>
                <Button Content="Consultar Fornecedores" Click="BtnAbrirEditarFornecedor_Click"/>
                <Button Content="Consultar Participantes" Click="BtnAbrirEditarParticipante_Click"/>
                <Button Content="Relatórios" Click="BtnAbrirRelatorios_Click"/>

            </StackPanel>
        </Border>

        <!-- Loading overlay centralizado -->
        <Grid x:Name="LoadingOverlay" Background="#88000000" Visibility="Collapsed" Opacity="0">
            <!-- Triggers primeiro -->
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Grid.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="LoadingOverlay"
                                             Storyboard.TargetProperty="Opacity"
                                             From="0" To="1" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- SR-71 girando -->
                <Image x:Name="ImgSR71" Source="/SistemaEventosCorporativos.UI;component/Assets/sr71.png"
                       Width="150" Height="150" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <RotateTransform x:Name="SR71RotateTransform"/>
                    </Image.RenderTransform>
                </Image>
                <TextBlock Text="Carregando..." Foreground="White" FontSize="18" FontWeight="Bold"
                           Margin="0,20,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
