<UserControl x:Class="SistemaEventosCorporativos.UI.UserControls.ConsultaEventos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaEventosCorporativos.UI.UserControls"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Lista de eventos -->
        <StackPanel Grid.Row="0">
            <DataGrid x:Name="dataGridEventos" AutoGenerateColumns="False" Height="250"
                  MouseDoubleClick="DataGridEventos_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                    <DataGridTextColumn Header="Início" Binding="{Binding DataInicio}" Width="100"/>
                    <DataGridTextColumn Header="Fim" Binding="{Binding DataFim}" Width="100"/>
                    <DataGridTextColumn Header="Local" Binding="{Binding Local}" Width="*"/>
                    <DataGridTextColumn Header="Lotação" Binding="{Binding LotacaoMaxima}" Width="80"/>
                    <DataGridTextColumn Header="Orçamento" Binding="{Binding OrcamentoMaximo}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Excluir evento" Click="BtnExcluirEventos_Click" Width="150" Height="30" Margin="10"/>
        </StackPanel>

        <!-- Área de edição -->
        <ContentControl x:Name="ContentArea" Grid.Row="1"/>
    </Grid>
</UserControl>
