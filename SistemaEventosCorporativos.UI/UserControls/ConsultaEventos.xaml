<UserControl x:Class="SistemaEventosCorporativos.UI.UserControls.ConsultaEventos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:SistemaEventosCorporativos.UI.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Seção: Lista de Eventos -->
        <GroupBox Header="Lista de Eventos" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <DataGrid x:Name="dataGridEventos" AutoGenerateColumns="False" Height="250"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          IsReadOnly="True" MouseDoubleClick="DataGridEventos_MouseDoubleClick"
                          RowBackground="WhiteSmoke" AlternatingRowBackground="LightGray">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                        <DataGridTextColumn Header="Início" Binding="{Binding DataInicio}" Width="100"/>
                        <DataGridTextColumn Header="Fim" Binding="{Binding DataFim}" Width="100"/>
                        <DataGridTextColumn Header="Local" Binding="{Binding Local}" Width="*"/>
                        <DataGridTextColumn Header="Lotação" Binding="{Binding LotacaoMaxima}" Width="80"/>
                        <DataGridTextColumn Header="Orçamento" Binding="{Binding OrcamentoMaximo}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Excluir Evento" Click="BtnExcluirEventos_Click" 
                            Width="120" Height="30" Background="#FFDD5555" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Área de edição -->
        <ContentControl x:Name="ContentArea" Grid.Row="1"/>
    </Grid>
</UserControl>
