<UserControl x:Class="SistemaEventosCorporativos.UI.UserControls.EditarFornecedor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Voltar" Click="BtnVoltar_Click" Margin="0,0,0,10"/>

            <!-- Nome do fornecedor -->
            <TextBox x:Name="fornecedor_txtNome" Text="Nome do Serviço" Foreground="Gray"
                     GotFocus="TxtNome_GotFocus" LostFocus="TxtNome_LostFocus" Margin="0,0,0,10"/>

            <!-- Valor do serviço -->
            <TextBox x:Name="fornecedor_txtValor" Text="0.00" Foreground="Gray"
                     GotFocus="TxtValor_GotFocus" LostFocus="TxtValor_LostFocus" Margin="0,0,0,10"/>

            <!-- CNPJ -->
            <TextBox x:Name="fornecedor_txtCnpj" Text="CNPJ" Foreground="Gray"
                     GotFocus="TxtCnpj_GotFocus" LostFocus="TxtCnpj_LostFocus" Margin="0,0,0,10"/>

            <Button Content="Salvar" Click="BtnSalvar_Click" Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</UserControl>
