<UserControl x:Class="SistemaEventosCorporativos.UI.UserControls.CadastrarParticipante"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Orientation="Vertical" VerticalAlignment="Top">

            <!-- SEÇÃO: DADOS DO PARTICIPANTE -->
            <GroupBox Header="Dados do Participante" FontWeight="Bold" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Nome:" Width="120" VerticalAlignment="Center"/>
                        <TextBox Name="txtNome" Width="400"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="CPF:" Width="120" VerticalAlignment="Center"/>
                        <TextBox Name="txtCpf" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Telefone:" Width="120" VerticalAlignment="Center"/>
                        <TextBox Name="txtTelefone" Width="200"/>
                        <TextBlock Text="Tipo:" Width="50" Margin="20,0,0,0" VerticalAlignment="Center"/>
                        <TextBox Name="txtTipo" Width="150"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- SEÇÃO: EVENTO -->
            <GroupBox Header="Evento" FontWeight="Bold" Margin="0,0,0,20">
                <StackPanel Margin="10" Orientation="Horizontal">
                    <TextBlock Text="Evento:" Width="120" VerticalAlignment="Center"/>
                    <ComboBox Name="cbEvento" Width="400" DisplayMemberPath="Nome" SelectedValuePath="Id"/>
                </StackPanel>
            </GroupBox>

            <!-- BOTÕES -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Salvar" Width="120" Height="35" Margin="0,0,10,0" Click="BtnSalvar_Click"/>
                <Button Content="Voltar" Width="120" Height="35" Click="BtnVoltar_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
