<UserControl x:Class="SistemaEventosCorporativos.UI.UserControls.EditarEvento"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="850">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <DockPanel Grid.Row="0" Margin="0,0,0,15">
            <Button Content="← Voltar" Width="100" Click="BtnVoltar_Click"/>
            <TextBlock Text="Editar Evento"
                       FontSize="22" FontWeight="Bold"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Conteúdo -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="10">

                <!-- Nome -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Nome do Evento:" Width="150" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtNome" Width="300"/>
                </StackPanel>

                <!-- Datas -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Data Início:" Width="150" VerticalAlignment="Center"/>
                        <DatePicker x:Name="dpDataInicio" Width="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Data Fim:" Width="100" VerticalAlignment="Center"/>
                        <DatePicker x:Name="dpDataFim" Width="150"/>
                    </StackPanel>
                </StackPanel>

                <!-- Tipo -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Tipo de Evento:" Width="150" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbTipoEvento"
                              Width="200"
                              DisplayMemberPath="Descricao"
                              SelectedValuePath="Id"/>
                </StackPanel>

                <!-- Observações -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Observações:"/>
                    <TextBox x:Name="txtObservacoes" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>

                <!-- Lotação e Orçamento -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Lotação Máx.:" Width="150" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtLotacao" Width="100"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Orçamento Máx.:" Width="150" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtOrcamento" Width="120"/>
                    </StackPanel>
                </StackPanel>

                <!-- Endereço -->
                <GroupBox Header="Endereço" Padding="10" Margin="0,0,0,10">
                    <UniformGrid Columns="2" Rows="3" Margin="5">
                        <StackPanel Margin="5">
                            <TextBlock Text="CEP:"/>
                            <TextBox x:Name="txtCep"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Rua:"/>
                            <TextBox x:Name="txtRua"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Número:"/>
                            <TextBox x:Name="txtNumero"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Bairro:"/>
                            <TextBox x:Name="txtBairro"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Cidade:"/>
                            <TextBox x:Name="txtCidade"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Estado:"/>
                            <TextBox x:Name="txtEstado"/>
                        </StackPanel>
                    </UniformGrid>
                </GroupBox>

                <!-- Fornecedores -->
                <GroupBox Header="Fornecedores Vinculados" Padding="10" Margin="0,0,0,10">
                    <StackPanel>

                        <!-- Seletor de fornecedor para adicionar -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Fornecedor:" Width="100" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cbFornecedores"
                      Width="250"
                      DisplayMemberPath="NomeServico"
                      SelectedValuePath="Id"
                      Margin="0,0,10,0"/>
                            <Button Content="Adicionar"
                    Width="90"
                    Click="BtnAdicionarFornecedor_Click"/>
                        </StackPanel>

                        <!-- Lista de fornecedores já vinculados -->
                        <ListBox x:Name="lstFornecedores"
                 DisplayMemberPath="NomeServico"
                 Height="120"
                 SelectionMode="Single"
                 Margin="0,0,0,10"/>

                        <!-- Botão para remover -->
                        <Button Content="Remover Selecionado"
                Width="160"
                HorizontalAlignment="Left"
                Click="BtnRemoverFornecedor_Click"/>

                    </StackPanel>
                </GroupBox>

                <!-- Salvar -->
                <Button Content="💾 Salvar"
                        Width="140" Height="40"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0"
                        Click="BtnSalvar_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
