<UserControl x:Class="SistemaEventosCorporativos.UI.UserControls.EditarEvento"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho com botão Voltar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="← Voltar" Width="100" Click="BtnVoltar_Click"/>
            <TextBlock Text="Editar Evento" FontSize="20" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Conteúdo -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nome -->
                <TextBlock Text="Nome do Evento:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtNome" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

                <!-- Datas -->
                <TextBlock Text="Data Início:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpDataInicio" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

                <TextBlock Text="Data Fim:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpDataFim" Grid.Row="2" Grid.Column="1" Margin="0,5"/>

                <!-- Tipo de Evento -->
                <TextBlock Text="Tipo de Evento:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cbTipoEvento" Grid.Row="3" Grid.Column="1" Margin="0,5"
                          DisplayMemberPath="Descricao" SelectedValuePath="Id"/>

                <!-- Observações -->
                <TextBlock Text="Observações:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtObservacoes" Grid.Row="4" Grid.Column="1" Margin="0,5"/>

                <!-- Lotação e Orçamento -->
                <TextBlock Text="Lotação Máx.:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLotacao" Grid.Row="5" Grid.Column="1" Margin="0,5" Width="100"/>

                <TextBlock Text="Orçamento Máx.:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtOrcamento" Grid.Row="6" Grid.Column="1" Margin="0,5" Width="150"/>

                <!-- Endereço -->
                <TextBlock Text="CEP:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtCep" Grid.Row="7" Grid.Column="1" Margin="0,5"/>

                <TextBlock Text="Rua:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtRua" Grid.Row="8" Grid.Column="1" Margin="0,5"/>

                <TextBlock Text="Número:" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtNumero" Grid.Row="9" Grid.Column="1" Margin="0,5" Width="80"/>

                <TextBlock Text="Bairro:" Grid.Row="10" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtBairro" Grid.Row="10" Grid.Column="1" Margin="0,5" Width="150"/>

                <TextBlock Text="Cidade:" Grid.Row="11" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtCidade" Grid.Row="11" Grid.Column="1" Margin="0,5" Width="150"/>

                <TextBlock Text="Estado:" Grid.Row="12" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtEstado" Grid.Row="12" Grid.Column="1" Margin="0,5" Width="50"/>

                <!-- Botão Salvar -->
                <Button Content="💾 Salvar" Grid.Row="13" Grid.Column="1" Width="120" Height="35" Margin="0,15,0,0"
                        HorizontalAlignment="Left" Click="BtnSalvar_Click"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
