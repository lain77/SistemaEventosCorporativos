<UserControl x:Class="SistemaEventosCorporativos.UI.UserControls.Relatórios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Botão arredondado com hover suave -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2C3E50"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1A252F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo de Card para menu lateral -->
        <Style x:Key="MenuCard" TargetType="Border">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="5" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F5F5" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu lateral dos relatórios -->
        <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,20,10,0">
            <TextBlock Text="Relatórios &amp; Dashboards"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,25"
                       Foreground="#2C3E50"/>

            <Border Style="{StaticResource MenuCard}">
                <Button Content="📅 Agenda dos Participantes"
                        Style="{StaticResource RoundedButton}"
                        Click="BtnAgendaParticipantes_Click"/>
            </Border>
            <Border Style="{StaticResource MenuCard}">
                <Button Content="👥 Fornecedores Mais Utilizados"
                        Style="{StaticResource RoundedButton}"
                        Click="BtnFornecedoresMaisUtilizados_Click"/>
            </Border>
            <Border Style="{StaticResource MenuCard}">
                <Button Content="📊 Tipos de Participantes"
                        Style="{StaticResource RoundedButton}"
                        Click="BtnTiposParticipantes_Click"/>
            </Border>
            <Border Style="{StaticResource MenuCard}">
                <Button Content="💰 Saldo de Orçamento"
                        Style="{StaticResource RoundedButton}"
                        Click="BtnOrcamentoEventos_Click"/>
            </Border>
        </StackPanel>

        <!-- Área de conteúdo -->
        <Border Grid.Column="1" Background="White" CornerRadius="15" Padding="15" Margin="10">
            <ContentControl x:Name="RelatoriosContentArea"/>
        </Border>
    </Grid>
</UserControl>
