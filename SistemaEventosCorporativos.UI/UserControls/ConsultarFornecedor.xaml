<UserControl x:Class="SistemaEventosCorporativos.UI.UserControls.ConsultarFornecedor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid Background="#F5F5F5" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Lista de Fornecedores -->
        <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15"
                BorderBrush="#DDD" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3" Opacity="0.15"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Lista de Fornecedores" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <DataGrid x:Name="dataGridFornecedores" AutoGenerateColumns="False" Height="250"
                          CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                          AlternatingRowBackground="#F9F9F9" RowBackground="White"
                          GridLinesVisibility="Horizontal" MouseDoubleClick="DataGridFornecedores_MouseDoubleClick"
                          HeadersVisibility="Column" ColumnHeaderHeight="30" FontSize="14">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Fornecedor.Id}" Width="50"/>
                        <DataGridTextColumn Header="Nome do Serviço" Binding="{Binding Fornecedor.NomeServico}" Width="2*"/>
                        <DataGridTextColumn Header="Evento" Binding="{Binding Evento.Nome}" Width="2*"/>
                        <DataGridTextColumn Header="Início" Binding="{Binding Evento.DataInicio, StringFormat=d}" Width="100"/>
                        <DataGridTextColumn Header="Fim" Binding="{Binding Evento.DataFim, StringFormat=d}" Width="100"/>
                        <DataGridTextColumn Header="CNPJ" Binding="{Binding Fornecedor.CNPJ}" Width="150"/>
                        <DataGridTextColumn Header="Valor" Binding="{Binding Fornecedor.Valor, StringFormat=C}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Excluir Fornecedor" Width="160" Height="35" 
                            Background="#FF5555" Foreground="White" BorderThickness="0" Cursor="Hand"
                            Click="BtnExcluirFornecedor_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Área de edição -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="15"
                BorderBrush="#DDD" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3" Opacity="0.1"/>
            </Border.Effect>
            <ContentControl x:Name="ContentArea"/>
        </Border>
    </Grid>
</UserControl>
