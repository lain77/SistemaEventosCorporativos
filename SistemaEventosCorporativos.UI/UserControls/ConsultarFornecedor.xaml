<UserControl x:Class="SistemaEventosCorporativos.UI.UserControls.ConsultarFornecedor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:SistemaEventosCorporativos.UI.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid Background="#1B1B1B" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Lista de Fornecedores -->
        <GroupBox Header="Lista de Fornecedores" FontWeight="Bold" Foreground="White" 
                  Grid.Row="0" Margin="0,0,0,10" Background="#2B2B2B" BorderBrush="Gray" BorderThickness="1">
            <StackPanel Margin="10">
                <DataGrid x:Name="dataGridFornecedores" AutoGenerateColumns="False" Height="250"
                          CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                          RowBackground="#2B2B2B" AlternatingRowBackground="#3B3B3B" Foreground="White"
                          GridLinesVisibility="Horizontal" MouseDoubleClick="DataGridFornecedores_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Nome do Serviço" Binding="{Binding NomeServico}" Width="*"/>
                        <DataGridTextColumn Header="Início" Binding="{Binding DataInicio}" Width="100"/>
                        <DataGridTextColumn Header="Fim" Binding="{Binding DataFim}" Width="100"/>
                        <DataGridTextColumn Header="Evento" Binding="{Binding Evento}" Width="*"/>
                        <DataGridTextColumn Header="CNPJ" Binding="{Binding Cnpj}" Width="100"/>
                        <DataGridTextColumn Header="Valor" Binding="{Binding Valor}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Excluir Fornecedor" Width="140" Height="35" Foreground="White" 
                            Background="#FF5555" BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF5555"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF3333"/>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Área de edição -->
        <ContentControl x:Name="ContentArea" Grid.Row="1" Background="#1B1B1B"/>
    </Grid>
</UserControl>
