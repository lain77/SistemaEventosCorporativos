<UserControl x:Class="SistemaEventosCorporativos.UI.UserControls.CadastrarTipoEvento"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500">

    <Grid Margin="20">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" >

            <!-- Botão voltar -->
            <Button Content="Voltar" Click="BtnVoltar_Click" Width="100" Margin="0,0,0,20"/>

            <!-- Seção de cadastro -->
            <GroupBox Header="Cadastro de Tipo de Evento" FontWeight="Bold" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Descrição:" Width="120" VerticalAlignment="Center"/>
                        <TextBox Name="txtDescricao" Width="250"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Botão salvar -->
            <Button Content="Salvar" Width="120" Height="35" HorizontalAlignment="Center" Click="BtnSalvar_Click"/>

        </StackPanel>
    </Grid>
</UserControl>
