<UserControl x:Class="SistemaEventosCorporativos.UI.UserControls.CadastrarTipoEvento"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">
        <StackPanel>
            <Button Content="Voltar" Click="BtnVoltar_Click" Margin="0,0,0,10" Width="100"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Tipo de evento:" VerticalAlignment="Center" Width="120"/>
                <TextBox Name="txtDescricao" Width="300"/>
            </StackPanel>

            <Button Content="Salvar" Width="100" Height="30" HorizontalAlignment="Left" Click="BtnSalvar_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
