<UserControl x:Class="SistemaEventosCorporativos.UI.UserControls.TipoParticipante"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#F5F5F5" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Lista de eventos -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Eventos"
                       FontSize="18" FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <ListBox x:Name="listEventos"
                     DisplayMemberPath="Nome"
                     SelectedValuePath="Id"
                     SelectionChanged="ListEventos_SelectionChanged"
                     Height="400"/>
        </StackPanel>

        <!-- DataGrid de tipos de participantes -->
        <StackPanel Grid.Column="2">
            <TextBlock Text="Tipos de Participantes"
                       FontSize="18" FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <DataGrid x:Name="dataGridTipos" AutoGenerateColumns="False" Height="400"
                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                      AlternatingRowBackground="#F9F9F9" RowBackground="White"
                      GridLinesVisibility="Horizontal" HeadersVisibility="Column" ColumnHeaderHeight="30">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="*"/>
                    <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
