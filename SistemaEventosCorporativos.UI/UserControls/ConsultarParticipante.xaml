<UserControl x:Class="SistemaEventosCorporativos.UI.UserControls.ConsultarParticipante"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaEventosCorporativos.UI.UserControls"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#F5F5F5" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Lista de Participantes com sombra e cantos arredondados -->
        <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15" 
                BorderBrush="#DDD" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3" Opacity="0.15"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Lista de Participantes" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <DataGrid x:Name="dataGridParticipantes" AutoGenerateColumns="False" Height="250"
                          CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                          AlternatingRowBackground="#F9F9F9" RowBackground="White"
                          GridLinesVisibility="Horizontal" MouseDoubleClick="DataGridParticipantes_MouseDoubleClick"
                          HeadersVisibility="Column" ColumnHeaderHeight="30" FontSize="14">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                        <DataGridTextColumn Header="Evento" Binding="{Binding Evento.Nome}" Width="*"/>
                        <DataGridTextColumn Header="CPF" Binding="{Binding Cpf}" Width="100"/>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100"/>
                        <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Excluir Participante" Width="160" Height="35" 
                            Background="#FF5555" Foreground="White" BorderThickness="0" Cursor="Hand"
                            Click="BtnExcluirParticipantes_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF5555"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF3333"/>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Área de edição -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="15"
                BorderBrush="#DDD" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3" Opacity="0.1"/>
            </Border.Effect>
            <ContentControl x:Name="ContentArea"/>
        </Border>
    </Grid>
</UserControl>
