<Window x:Class="SistemaEventosCorporativos.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SistemaEventosCorporativos.UI.LoginUserControls"
        Title="Entrar"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Black"
        Width="900" Height="700">

    <Grid>
        <!-- Fundo com gradiente -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0A0A0A" Offset="0"/>
                <GradientStop Color="#1C1C1C" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- SR-71 clicável com hover "aura" -->
        <Border HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0"
                CornerRadius="15" 
                Background="Transparent"
                Cursor="Hand"
                MouseLeftButtonUp="Sr71_Click">
            <Border.Effect>
                <DropShadowEffect x:Name="Sr71Shadow"
                                  Color="#2B3F74"
                                  BlurRadius="0"
                                  ShadowDepth="0"
                                  Opacity="0"/>
            </Border.Effect>

            <Image Source="/SistemaEventosCorporativos.UI;component/Assets/sr71.png"
                   Width="800" Height="400"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <RotateTransform Angle="0"/>
                </Image.RenderTransform>
                <Image.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                 From="-5" To="5"
                                                 Duration="0:0:2"
                                                 AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Image.Triggers>
            </Image>

            <!-- Hover behavior: aumenta a aura -->
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#2B3F74"
                                                      BlurRadius="40"
                                                      ShadowDepth="0"
                                                      Opacity="0.6"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>

        <!-- Área para carregar UserControls -->
        <ContentControl x:Name="ContentArea" 
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>
    </Grid>
</Window>
